<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#f4f2f3"
    android:clickable="false">


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_corners"
                android:id="@+id/frameLayout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" >

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right" >

                        <TextView
                            android:id="@+id/email"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="#372c24"
                            android:text="  Bienvenid@!!!!!!:  "
                            android:layout_margin="2dp"
                            android:background="@drawable/edittext_rounded_corners" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="#372c24"
                            android:text="Username:  "
                            android:layout_margin="2dp"
                            android:background="@drawable/edittext_rounded_corners" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="#372c24"
                            android:text="E-mail:"
                            android:layout_margin="2dp"
                            android:background="@drawable/edittext_rounded_corners" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left" >

                        <TextView
                            android:id="@+id/usr_nombre"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="#372c24"
                            android:background="@drawable/edittext_rounded_corners"
                            android:layout_margin="2dp" />

                        <TextView
                            android:id="@+id/txt_rut"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="#372c24"
                            android:background="@drawable/edittext_rounded_corners"
                            android:layout_margin="2dp" />

                        <TextView
                            android:id="@+id/txt_email"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="#372c24"
                            android:background="@drawable/edittext_rounded_corners"
                            android:layout_margin="2dp" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_rounded_corners">

                <LinearLayout
                    android:id="@+id/botones"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#372c24"
                            android:text="Revisa la lista de asignaturas:"
                            android:id="@+id/textView" />

                        <ImageButton
                            android:src="@drawable/asignaturas"
                            android:id="@+id/misAsignaturas"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="-61dp"
                            android:layout_marginLeft="-56dp"
                            android:background="@drawable/edittext_rounded_corners"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:layout_gravity="center_horizontal|bottom|right"
                            android:clickable="true"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#372c24"
                            android:text="Checkea la asistencia:"
                            android:id="@+id/textView2" />

                        <ImageButton
                            android:src="@drawable/asistencia"
                            android:id="@+id/miAsistencia"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="-61dp"
                            android:layout_marginLeft="-56dp"
                            android:background="@drawable/edittext_rounded_corners"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:layout_gravity="center_horizontal|bottom|right"
                            android:clickable="true"
                            android:textAlignment="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#372c24"
                            android:text="VÃ© las actividades pendientes:"
                            android:id="@+id/textView" />

                        <ImageButton
                            android:src="@drawable/eventos"
                            android:id="@+id/misEventos"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="-61dp"
                            android:layout_marginLeft="-56dp"
                            android:background="@drawable/edittext_rounded_corners"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:layout_gravity="center_horizontal|bottom|right"
                            android:clickable="true"
                            android:textAlignment="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#372c24"
                            android:text="Revisa las notas:"
                            android:id="@+id/textView" />

                        <ImageButton
                            android:src="@drawable/calificaciones"
                            android:id="@+id/misCalificaciones"
                            android:layout_weight="1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="-61dp"
                            android:layout_marginLeft="-56dp"
                            android:background="@drawable/edittext_rounded_corners"
                            android:layout_margin="@dimen/activity_vertical_margin"
                            android:layout_gravity="center_horizontal|bottom|right"
                            android:clickable="true"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>


        </LinearLayout>


</ScrollView>
